{
  "name": "hasanhawary/permission-manager",
  "description": "A simple permission and role management service extracted from the app for reuse.",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "laravel",
    "permission",
    "roles",
    "spatie/laravel-permission"
  ],
  "authors": [
    { "name": "Hasan Hawary", "role": "Developer" }
  ],
  "require": {
    "php": "^8.0",
    "illuminate/support": "^8.0 || ^9.0 || ^10.0 || ^11.0 || ^12.0"
  },
  "autoload": {
    "psr-4": {
      "HasanHawary\\PermissionManager\\": "src/"
    },
    "files": [
      "src/helpers.php"
    ]
  },
  "extra": {
    "laravel": {
      "providers": [
        "HasanHawary\\PermissionManager\\PermissionManagerServiceProvider"
      ]
    }
  },
  "scripts": {
    "test": "../../vendor/bin/phpunit -c phpunit.xml"
  },
  "homepage": "https://github.com/hasanhawary/permission-manager",
  "support": {
    "issues": "https://github.com/hasanhawary/permission-manager/issues",
    "source": "https://github.com/hasanhawary/permission-manager"
  },
  "config": {
    "sort-packages": true
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}