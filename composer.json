{
  "name": "HasanHawary/permission-manager",
  "description": "A simple permission and role management service extracted from the app for reuse.",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "laravel",
    "permission",
    "roles",
    "spatie/laravel-permission"
  ],
  "authors": [
    {
      "name": "Hassan",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^8.0",
    "illuminate/support": "^10.0 || ^11.0 || ^12.0",
    "laravel/framework": "^10.0 || ^11.0 || ^12.0",
    "spatie/laravel-permission": "^6.0"
  },
  "autoload": {
    "psr-4": {
      "HasanHawary\\PermissionManager\\": "src/"
    },
    "files": [
      "src/helpers.php"
    ]
  },
  "extra": {
    "laravel": {
      "providers": [
        "HasanHawary\\PermissionManager\\PermissionManagerServiceProvider"
      ]
    }
  },
  "config": {
    "sort-packages": true
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}